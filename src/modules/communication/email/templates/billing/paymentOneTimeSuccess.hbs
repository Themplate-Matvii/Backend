<h1 style="font-size:24px; margin:0 0 12px; color:#0f172a;">{{t "emails.billing.paymentSucceededOneTime.title"}}</h1>
<p style="margin:0 0 10px; color:#475569; font-size:15px;">{{t "emails.billing.paymentSucceededOneTime.greeting" name=name}}</p>

<div style="background:#f8fafc; border-radius:14px; padding:16px 18px; border:1px solid #e2e8f0; margin-bottom:16px;">
  <p style="margin:0; color:#0f172a; font-weight:600;">{{t "emails.billing.paymentSucceededOneTime.summary" product=productName amount=amount currency=currency}}</p>
  {{#if accessDescription}}
    <p style="margin:6px 0 0; color:#475569;">{{accessDescription}}</p>
  {{/if}}
</div>

{{#if receiptUrl}}
  <a href="{{receiptUrl}}" class="btn-primary" style="background:#2563eb; color:#fff; padding:12px 18px; border-radius:12px; font-weight:700; text-decoration:none; display:inline-block;">{{t "emails.billing.actions.viewReceipt"}}</a>
{{/if}}
{{#if invoiceUrl}}
  <div style="margin-top:10px;">
    <a href="{{invoiceUrl}}" style="color:#2563eb; font-weight:700; text-decoration:none;">{{t "emails.billing.actions.viewInvoice"}}</a>
  </div>
{{/if}}

<p style="margin:16px 0 0; color:#94a3b8; font-size:13px;">{{t "emails.billing.paymentSucceededOneTime.footer"}}</p>
